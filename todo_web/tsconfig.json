{ "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "server",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./server/types", "./node_modules/@types"]
  },
  "include": ["server/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}

